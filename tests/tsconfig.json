{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "../",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["jest", "@types/jest", "node"]
  },
  "include": [
    "../**/*.ts",
    "../**/*.vue",
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.nuxt",
    "../dist",
    "../.output"
  ]
}